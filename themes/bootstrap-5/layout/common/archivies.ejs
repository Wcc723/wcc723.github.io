<% var last, postCount = 0; %>

<% site.posts.each(function(post, i) { %>
  <% var year = post.date.year(); %>
  <% if (last != year) { %>
    <% if (last != null) { %>
      </div></section>
    <% } %>
    <% last = year; postCount = 0;%>
    <section class="archives-wrap">
      <div class="archive-year-wrap">
        <hr>
        <a href="<%- url_for('archives/' + year) %>" class="archive-year"><i class="icon fa fa-calendar-o"></i><%= year %></a>
        <hr>
      </div>
      <div class="archives">
  <% } %>
  <% postCount++; %>
  <% if (postCount % 2 == 1) { %>
    <div class="article-row">
  <% } %>
    <%- partial('archivies_summary', { post: post, thisThumbnail: 'noDisplay' }) %>
  <% if (postCount == page.posts.length || postCount % 2 == 0) { %>
    </div>
  <% } %>
<% }) %>
<% if (site.posts.length) { %>
  </div></section>
<% } %>
