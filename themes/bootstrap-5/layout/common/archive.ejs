<% var last, postCount = 0; %>
<% page.posts.each(function(post, i) { %>
    <% var year = post.date.year(); %>
    <% if (last != year) { %>
        <% if (last != null) { %>
            </div></section>
        <% } %>
        <% last = year; postCount = 0;%>
        <section class="archives-wrap">
          <hr>
            <div class="archive-year-wrap">
                <a href="<%- url_for('archives/' + year) %>" class="text-muted"><i class="icon fa fa-calendar-o"></i><%= year %></a>
            </div>
            <div class="archives pt-3">
    <% } %>
    <% postCount++; %>
    <% if (postCount % 2 == 1) { %>
        <div class="article-row">
    <% } %>
        <%- partial('summary', { post: post }) %>
    <% if (postCount == page.posts.length || postCount % 2 == 0) { %>
        </div>
    <% } %>
<% }) %>
<% if (page.posts.length) { %>
    </div></section>
<% } %> 
<div class="mb-4">
    <%- partial('../widget/google_adsense_article_list') %>
</div>
<% if (page.total > 1) { %>
    <nav id="page-nav" class="pagination justify-content-center">
        <%- paginator({prev_text: 'Prev', next_text: 'Next', mid_size: 6}) %>
    </nav>
<% } %>
