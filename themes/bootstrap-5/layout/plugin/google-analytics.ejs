
<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=<%= theme.plugins.google_analytics %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '<%= theme.plugins.google_analytics %>');
</script>
<script>
  (() => {
    let gtagViewContentSent = false;

    setTimeout(() => {
      const endViewDom = document.querySelector('#endView');
      if (endViewDom) {
        const endViewDomOffsetTop = endViewDom.offsetTop;
        window.addEventListener('scroll', () => {
          const windowHeight = window.innerHeight;
          const windowY = window.screenY;
          if ((windowHeight + windowY) > endViewDomOffsetTop && !gtagViewContentSent) {
            gtagViewContentSent = true;
            gtag('event', 'view_item');
          }
        });
      }
    }, 500);
  })();
</script>
